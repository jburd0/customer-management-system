doctype html
html
	head
		title= title
		link(rel='stylesheet', href='/stylesheet/bootstrap.min.css')
		link(rel='stylesheet', href='/stylesheet/normalize.css')
		link(rel='stylesheet', href='/stylesheet/font-awesome.css')
		link(rel='stylesheet', href='/stylesheet/style.css')

	body
		.container
			.row
				.col-xs-10.col-xs-offset-1.col-md-6.col-md-offset-3.col-xl-8.col-xl-offset-2.login-box
					h1.display-1.text-center.login-heading
						.fa.fa-medkit
						| &nbsp;
						| Graff Veterinary Clinic
					.col-md-10.col-md-offset-1
						.form-group
							.input-group
								.input-group-addon.green-icon
									.fa.fa-user
								input.form-control#email(type="email" placeholder="Username")

						.form-group
							.input-group
								.input-group-addon.yellow-icon
									.fa.fa-lock
								input.form-control#email(type="password" placeholder="Password")
					a.btn.btn-info(href="/") Forgot Password?
					a.btn.btn-danger.pull-right(href="/") Login

		script(src='/javascript/bootstrap.min.js')
		script(src='/javascript/font-awesome.js')
