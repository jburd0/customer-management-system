extends layout

block content
    h1 Add Customer
    br
    .row
        .container.col-md-6.col-md-offset-3
            form
                .col-md-10.col-md-offset-1
                    .form-group
                        .input-group
                            .input-group-addon.red-icon
                                .fa.fa-user
                            input.form-control(placeholder="First Name")
                .col-md-10.col-md-offset-1
                    .form-group
                        .input-group
                            .input-group-addon
                                .fa.fa-user
                            input.form-control(placeholder="Last Name")

                .col-md-10.col-md-offset-1
                    .form-group
                        .input-group
                            .input-group-addon.yellow-icon
                                .fa.fa-phone
                            input.form-control(placeholder="Phone")
                .col-md-10.col-md-offset-1
                    .form-group
                        .input-group
                            .input-group-addon.green-icon
                                .fa.fa-map-signs
                            input.form-control(placeholder="Address")
                a.btn.btn-info(href="/customers") Cancel
                a.btn.btn-danger.pull-right(href="/customers") Add User
